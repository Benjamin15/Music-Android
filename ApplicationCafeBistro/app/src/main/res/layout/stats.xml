<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/time_stat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_time_stats_container"
        android:text="Temps moyen"
        android:gravity="bottom"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/user_stat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_user_stats_container"
        android:gravity="bottom"
        android:text="utilisateur"
        android:textColor="#000000"
        android:layout_toEndOf="@id/time_stat"
        />

    <TextView
        android:id="@+id/music_stat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_musics_stats_container"
        android:text="musiques"
        android:gravity="bottom"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/remove_stat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_remove_stats_container"
        android:text="suppression"
        android:gravity="bottom"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        />

</LinearLayout>
